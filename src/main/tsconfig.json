{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    // "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["./global", "../../node_modules/@types/node"]
  },
  "include": ["."]
}
